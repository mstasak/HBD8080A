<Page
    x:Class="MFComputer.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:src="using:MFComputer.Views"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea" Background="#ff1e1e1e" BorderBrush="LightBlue" BorderThickness="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="110" />
            <RowDefinition Height="110" />
            <RowDefinition Height="110" />
            <RowDefinition Height="200" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="650" />
            <ColumnDefinition Width="650" />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>
        <src:LEDRow TopTitle="Output Port FF" Grid.Row="0" Grid.Column="0"
                       ButtonLabels="O7,O6,O5,O4,O3,O2,O1,O0" />
        <!--<src:LEDRow TopTitle="Flags" Grid.Row="1" Grid.Column="0" LEDCount="6"
                       ButtonLabels="Int Enb,Z,S,P,CY,AC,x,x" />-->
        <src:LEDRow TopTitle="Flags" Grid.Row="1" Grid.Column="0" LEDCount="6"
                       ButtonLabels="Int Enabled,Zero,Sign,Parity,Carry,Aux Carry,x,x" />
        <src:LEDRow TopTitle="High Address" Grid.Row="2" Grid.Column="0"
                       ButtonLabels="A15,A14,A13,A12,A11,A10,A9,A8" />
        <src:SwitchRow TopTitle="High Address - Input Port FF" Grid.Row="3" Grid.Column="0"
                       ButtonLabels="A15/I7,A14/I6,A13/I5,A12/I4,A11/I3,A10/I2,A9/I1,A8/I0" />

        <src:LEDRow TopTitle="Memory Data" Grid.Row="1" Grid.Column="1"
                       ButtonLabels="M7,M6,M5,M4,M3,M2,M1,M0" />
        <src:LEDRow TopTitle="Low Address" Grid.Row="2" Grid.Column="1"
                       ButtonLabels="A7,A6,A5,A4,A3,A2,A1,A0" />
        <src:SwitchRow TopTitle="Low Address / Memory Data" Grid.Row="3" Grid.Column="1"
                       ButtonLabels="A7/M7,A6/M6,A5/M5,A4/M4,A3/M3,A2/M2,A1/M1,A0/M0" />

        <Grid Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center">
          <TextBlock FontSize="48" FontWeight="ExtraBold" FontFamily="Script"  Foreground="LightBlue">MFComputer 8080A 50th Anniversary</TextBlock>
        </Grid>
        
        <!--<TextBlock Grid.Row="2" Grid.Column="2" Foreground="Gray">TBD: essential status</TextBlock>-->
        <src:LEDRow TopTitle="Status" Grid.Row="2" Grid.Column="2" LEDCount="3"
                       ButtonLabels="Turbo,Halt,Power,x,x,x,x,x" />
        <TextBlock Grid.Row="3" Grid.Column="2" Foreground="Gray" TextWrapping="Wrap">Switches: power, reset, run/stop, singlestep,examine+next, deposit+next, turbo/2MHz</TextBlock>
    </Grid>
</Page>
