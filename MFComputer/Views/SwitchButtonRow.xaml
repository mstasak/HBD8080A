        </Grid.ColumnDefinitions>
        <TextBlock x:Name="GridLabel" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="1" HorizontalAlignment="Center" Foreground="White" Text="{x:Bind TopTitle}"/>
